<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Events"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Filter Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/active_filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active: 0"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upcoming_filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming: 0"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closed_filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed: 0"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <!-- Events RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:clipToPadding="false"
            android:paddingEnd="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
