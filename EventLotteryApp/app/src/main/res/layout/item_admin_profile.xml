<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/adminProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adminProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@example.com" />

    <TextView
        android:id="@+id/adminProfileRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: entrant" />

    <TextView
        android:id="@+id/adminProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 00000000" />

    <TextView
        android:id="@+id/adminProfileBanStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Active"
        android:textColor="#44DD44"
        android:layout_marginTop="6dp" />

    <Button
        android:id="@+id/adminBanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Ban Options"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#cccccc"/>

</LinearLayout>
