<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Event Lottery"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_bar"
        />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:background="@drawable/search_background"
        android:hint="Search events..."
        android:textColorHint="@color/opaque_black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_search"
        android:drawableEnd="@drawable/ic_calendar"

        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_list_title"
        />

    <HorizontalScrollView
        android:id="@+id/filter_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/search_bar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/all_filter"
                android:tag="all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sports_filter"
                android:tag="sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/music_filter"
                android:tag="music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/workshops_filter"
                android:tag="workshops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workshops"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/free_filter"
                android:tag="free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Cost"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/community_filter"
                android:tag="community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:strokeColor="@color/light_opaque_black"
                app:strokeWidth="1dp"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/transparent"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/filter_scroller"
        app:layout_constraintBottom_toBottomOf="@id/events_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?android:attr/progressBarStyleLarge"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/filter_scroller"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
