<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingTop="@dimen/status_bar_padding"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Finalized List"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Statistics -->
            <TextView
                android:id="@+id/total_attendees_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Attendees: 20/6"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/cancelled_count_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelled: 2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/declined_count_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Declined: 3"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Filter Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp">

                    <!-- Accepted Button -->
                    <Button
                        android:id="@+id/filter_accepted_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accepted"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/button_background"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_check_circle"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <!-- Drawn Button -->
                    <Button
                        android:id="@+id/filter_drawn_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drawn"
                        android:textColor="@color/black"
                        android:background="@drawable/export_csv_button_bg"
                        android:backgroundTint="@null"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_check_circle"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/black"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <!-- Declined Button -->
                    <Button
                        android:id="@+id/filter_declined_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Declined"
                        android:textColor="@color/black"
                        android:background="@drawable/export_csv_button_bg"
                        android:backgroundTint="@null"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_declined"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/black"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <!-- Cancelled Button -->
                    <Button
                        android:id="@+id/filter_cancelled_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelled"
                        android:textColor="@color/black"
                        android:background="@drawable/export_csv_button_bg"
                        android:backgroundTint="@null"
                        android:drawableStart="@drawable/ic_close_circle"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/black"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Participants Heading -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participants"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Participants List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/participants_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp" />

            <!-- Action Buttons -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white"
                android:background="@drawable/delete_button_bg"
                android:backgroundTint="@null"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/draw_replacement_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw Replacement Entrant"
                android:textColor="@color/white"
                android:background="@drawable/notify_button_bg"
                android:backgroundTint="@null"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/export_csv_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export CSV"
                android:textColor="@color/black"
                android:background="@drawable/export_csv_button_bg"
                android:backgroundTint="@null"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorFullWidth="true"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_dashboard"
            android:text="Dashboard" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_plus"
            android:text="Create" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_notifications"
            android:text="Notifications" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_profile"
            android:text="Profile" />

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

