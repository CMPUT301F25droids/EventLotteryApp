<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Bar (fixed) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@color/None"
        android:paddingHorizontal="12dp"
        android:paddingTop="@dimen/status_bar_padding"
        android:paddingBottom="12dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content below -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:id="@+id/event_organizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer: Melody Makers"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"

                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/event_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cost: Free"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"

                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="This is where event details and description will appear."
                android:textSize="15sp"
                android:layout_marginHorizontal="16dp"
                android:paddingTop="12dp"/>

            <TextView
                android:id="@+id/tv_lottery_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lottery Info:"
                android:textSize="15sp"
                android:layout_marginHorizontal="16dp"
                android:paddingTop="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/join_waitlist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waiting List"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/leave_waitlist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waiting List"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"/>

            <!-- TEMPORARY TEST BUTTON - DELETE AFTER TESTING -->
            <Button
                android:id="@+id/btn_test_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§ª TEST INVITATION (DELETE ME)"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="#FF0000"
                android:textColor="@android:color/white"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
