<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    tools:context=".EntrantView.EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginBottom="8dp" />

        <!-- Event Poster -->
        <ImageView
            android:id="@+id/event_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginBottom="12dp"
            tools:ignore="ContentDescription" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Organizer -->
        <TextView
            android:id="@+id/event_organizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer: Loading..."
            android:textSize="16sp"
            android:layout_marginBottom="6dp"
            android:textColor="#555555" />

        <!-- Cost -->
        <TextView
            android:id="@+id/event_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: Free"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Waitlist Count -->
        <TextView
            android:id="@+id/waitlist_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 entrants on waitlist"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Join / Leave Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/join_waitlist_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join Waitlist"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/leave_waitlist_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leave Waitlist"
                android:backgroundTint="@color/design_default_color_error"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Organizer Notification Section -->
        <LinearLayout
            android:id="@+id/organizer_notification_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:paddingTop="12dp"
            android:background="#FFF7E0"
            android:padding="10dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer Controls"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#444"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/notify_waitlist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Waitlist"
                android:backgroundTint="@color/purple_200"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_lottery_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lottery Info:"
                android:textSize="15sp"
                android:layout_marginHorizontal="16dp"
                android:paddingTop="8dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/notify_selected_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Selected Entrants"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/notify_cancelled_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waiting List"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"/>

            <!-- TEMPORARY TEST BUTTON - DELETE AFTER TESTING -->
            <Button
                android:id="@+id/btn_test_invitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§ª TEST INVITATION (DELETE ME)"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="#FF0000"
                android:textColor="@android:color/white"/>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
