<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingTop="@dimen/status_bar_padding"
        android:paddingBottom="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Manage Waiting List"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/opaque_light_grey">

                <!-- Event Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/medium_grey" />

                    <TextView
                        android:id="@+id/event_name_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Beginner Swim Lessons"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Registration Ends -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/medium_grey" />

                    <TextView
                        android:id="@+id/registration_ends_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registration Ends: Dec 15 2024"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Total Entrants -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_grid"
                        app:tint="@color/medium_grey" />

                    <TextView
                        android:id="@+id/total_entrants_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Entrants: 45"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Slots Available -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/medium_grey" />

                    <TextView
                        android:id="@+id/slots_available_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slots Available: 20"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/edit_text_custom_bg"
                android:padding="12dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/medium_grey" />

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search entrants by name or email"
                    android:textSize="14sp"
                    android:textColorHint="@color/medium_grey"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp" />
            </LinearLayout>

            <!-- Map View (always visible, shows locations if available) -->
            <org.osmdroid.views.MapView
                android:id="@+id/entrants_map_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Filter Tabs -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- All Tab -->
                    <LinearLayout
                        android:id="@+id/filter_all_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/chip_background"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_menu"
                            app:tint="@color/selected_tab_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:textSize="14sp"
                            android:textColor="@color/selected_tab_color"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- Pending Tab -->
                    <LinearLayout
                        android:id="@+id/filter_pending_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/chip_background"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_pending"
                            app:tint="@color/medium_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- Selected Tab -->
                    <LinearLayout
                        android:id="@+id/filter_selected_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/chip_background"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/medium_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- Declined Tab -->
                    <LinearLayout
                        android:id="@+id/filter_declined_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_declined"
                            app:tint="@color/medium_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Declined"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Entrants List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/entrants_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- Action Buttons -->
            <Button
                android:id="@+id/run_lottery_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run Lottery"
                android:textColor="@color/black"
                android:background="@drawable/export_csv_button_bg"
                android:backgroundTint="@null"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/export_csv_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export List to CSV"
                android:textColor="@color/black"
                android:background="@drawable/export_csv_button_bg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorFullWidth="true"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_dashboard"
            android:text="Dashboard" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_plus"
            android:text="Create" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_notifications"
            android:text="Notifications" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_profile"
            android:text="Profile" />

    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

