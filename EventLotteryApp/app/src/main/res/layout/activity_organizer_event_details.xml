<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opaque_light_grey"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingTop="@dimen/status_bar_padding"
        android:paddingBottom="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintEnd_toStartOf="@id/edit_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Edit Button -->
        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Event Image -->
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:contentDescription="Event image" />

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp" />

            <!-- Date Range -->
            <TextView
                android:id="@+id/event_date_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 1 â€“ Mar 1, 2025"
                android:textSize="16sp"
                android:textColor="@color/medium_grey"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textColor="@color/medium_grey"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/event_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$60 per participant"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp" />

            <!-- Statistics Section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:scrollbars="none"
                android:fillViewport="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="16dp">

                    <!-- Entrants Joined Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_profile"
                                app:tint="#4E3CDB" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_profile"
                            app:tint="#4E3CDB" />

                        <TextView
                            android:id="@+id/entrants_joined_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrants Joined: 45"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Slots Available Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#FF69B4" />

                        <TextView
                            android:id="@+id/slots_available_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slots Available: 60"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Days Left in Registration Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_hourglass"
                            app:tint="#8B4513" />

                        <TextView
                            android:id="@+id/days_left_registration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days Left in Registration: 2"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Lottery Draw Date Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bar_chart"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/lottery_draw_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lottery Draw Date: Dec 15, 2024"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Primary Action Buttons -->
            <Button
                android:id="@+id/manage_waiting_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Waiting List"
                android:textColor="@color/white"
                android:backgroundTint="@color/button_background"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/notify_entrants_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify Entrants"
                android:textColor="@color/white"
                android:backgroundTint="@color/button_background"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/share_qr_code_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share QR Code"
                android:textColor="@color/white"
                android:backgroundTint="@color/button_background"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:padding="16dp" />

            <!-- Secondary Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <!-- Finalized List -->
                <LinearLayout
                    android:id="@+id/finalized_list_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_profile"
                        app:tint="@color/button_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finalized List"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Cancel Event -->
                <LinearLayout
                    android:id="@+id/cancel_event_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close_circle"
                        app:tint="@color/button_background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel Event"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <!-- Debug Buttons (for testing only - can be removed in production) -->
            <Button
                android:id="@+id/debug_add_users_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[DEBUG] Add 20 Test Users to Waiting List"
                android:textColor="@color/white"
                android:backgroundTint="#FF6B6B"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/debug_remove_users_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[DEBUG] Remove All Test Users from Waiting List"
                android:textColor="@color/white"
                android:backgroundTint="#FF6B6B"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

