<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Menu Button (3 dots) -->
        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Menu"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Event Poster Image -->
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:contentDescription="Event image"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Status Tag Overlay -->
            <TextView
                android:id="@+id/event_status_tag"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/status_tag_background"
                android:elevation="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:text="ðŸŸ¢ Open - 0/0"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintBottom_toBottomOf="@+id/event_image"
                app:layout_constraintStart_toStartOf="@+id/event_image" />

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="Event Title"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.01"
                app:layout_constraintTop_toBottomOf="@+id/event_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Date Range with Calendar Icon -->
            <LinearLayout
                android:id="@+id/date_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/event_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/calendar_weekday_text"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/event_date_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 1 â€“ Mar 1, 2025"
                    android:textColor="@color/calendar_weekday_text"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Location with Location Icon -->
            <LinearLayout
                android:id="@+id/location_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/date_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/calendar_weekday_text"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/calendar_weekday_text"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Price with Dollar Icon -->
            <LinearLayout
                android:id="@+id/price_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/location_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dollar"
                    android:tint="@color/calendar_weekday_text"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/event_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$60 per participant"
                    android:textColor="@color/calendar_weekday_text"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Statistics Section -->
            <HorizontalScrollView
                android:id="@+id/statistics_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:scrollbars="none"
                android:fillViewport="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/price_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="16dp">

                    <!-- Entrants Joined Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_profile"
                            app:tint="#4E3CDB" />

                        <TextView
                            android:id="@+id/entrants_joined_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrants Joined: 45"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Slots Available Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#FF69B4" />

                        <TextView
                            android:id="@+id/slots_available_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slots Available: 60"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Days Left in Registration Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_hourglass"
                            app:tint="#8B4513" />

                        <TextView
                            android:id="@+id/days_left_registration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days Left: 2"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Lottery Draw Date Chip -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@drawable/chip_background">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bar_chart"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/lottery_draw_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Draw: Dec 15, 2024"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- About This Event Section -->
            <TextView
                android:id="@+id/about_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:text="About This Event"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.01"
                app:layout_constraintTop_toBottomOf="@+id/statistics_scroll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="No description available."
                android:textColor="@color/calendar_weekday_text"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@+id/about_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Primary Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/manage_waiting_list_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:text="Manage Waiting List"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/selected_tab_color"
                app:cornerRadius="56dp"
                app:layout_constraintTop_toBottomOf="@+id/event_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/notify_entrants_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:text="Notify Entrants"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/selected_tab_color"
                app:cornerRadius="56dp"
                app:layout_constraintTop_toBottomOf="@+id/manage_waiting_list_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- View Finalized List Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/finalized_list_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:text="View Finalized List"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/selected_tab_color"
                app:cornerRadius="56dp"
                app:layout_constraintTop_toBottomOf="@+id/notify_entrants_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
